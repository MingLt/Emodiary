<!--pages/me/me.wxml-->
<view class='head head-height'>
    <block wx:if="{{!hasUserInfo && canIUse}}">
      <view class="userinfo" bindtap="ishaveuserInfo">
        <image class="userinfo-avatar" src="../../icon/用户.png" mode="cover" bindtap="ishaveuserInfo"></image>
        <text class="userinfo-nickname" >微信授权</text>
      </view>
      <button class="login-button head-height" bindtap="ishaveuserInfo"> 获取头像昵称 </button>
    </block>
    <block wx:else>
      <view class="userinfo">
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
    </block>
  </view>

  <view class="list-wrapper">
    <block wx:for="{{menuitems}}" wx:key="item">
      <navigator url="{{item.url}}" class="list-item" hover-class="list-item_active">
        <view class="div-line"></view>
        <view class='item'>
          <image class='item-image' src='{{item.icon}}'></image>
          <text class="item-text" >{{item.text}}</text>
          <text class='item-array'>></text>
        </view>
        <view class="div-line"></view>
      </navigator>
    </block>
  </view>